<div class="image-container-big">
  <%= link_to instrument_path(instrument) do %>
    <%= cl_image_tag instrument.photo.key, height: 300, width: 800, crop: :fill, loading:"lazy", :class=>"instrument-card-image"%>
  <% end %>
  <div class="header-image-big">
    <i class="fas fa-map-marker-alt"></i>
    <p class="location"><%= instrument.title %> <%= instrument.city %></p>
    <i class="far fa-heart"></i>
  </div>
</div>
<div class="overview-big">
  <p class="price"> <%= instrument.price %> â‚¬ /h</p>
  <div class=features>
    <% instrument.features.limit(2).each do |feature| %>
      <ul>
        <li>
          <%= feature.name %>
        </li>
      </ul>
    <% end %>
  </div>
  <p><i class="fas fa-star"></i> <%= pluralize(instrument.reviews.count, 'review') %></p>
</div>
<div class="edit-instrument">
  <button class="button-info">
    <%= link_to 'Edit Instrument', edit_instrument_path(instrument), class: "button-info" %>
  </button>
  <button class=button-primary >
    <% if instrument.pause %>
      <%= link_to 'Un-Pause Instrument', activate_instrument_path(instrument), method: :put, class: "button-primary" %>
    <% else %>
      <%= link_to 'Pause Instrument', pause_instrument_path(instrument), method: :put, class: "button-primary" %>
    <% end %>
  </button>
  <button type="submit">
    <%= link_to 'Delete Instrument', instrument_path(instrument), method: :delete, data: { confirm: 'This will delete your instrument. Are you sure?', disable_with: 'Deleting...' } %>
  </button>
  <button>Check your Instrument Bookings</button>
  <%#= link_to 'My Bookings on this instrument', instrument_bookings_path %>
</div>
<!--  Booking section: Bookings on these instruments-->
<%= render 'bookings/instrument_bookings_table', instrument: instrument %>
<!--  Usersbookings-->
<h2>  Your own bookings </h2>
<div class="add-new-instrument">
  <button class="button-secondary">
    <%= link_to 'My Bookings', bookings_path %>
  </button>
</div>