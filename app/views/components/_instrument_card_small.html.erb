<% @instruments.each do |instrument| %>
  <%= link_to instrument_path(instrument) do %>
    <div class="col">
      <div class="image-container-small">
        <%= cl_image_tag instrument.photo.key, height: 250, width: 250, crop: :fill, loading:"lazy", :class=>"instrument-card-image"%>
        <div class="header-image-small">
          <% if user_signed_in? %>
            <% if check_favorite(instrument).present?  %>
              <%= link_to favorite_instrument_path(instrument, type: "unfavourite"), remote: true,method: :put do %>
                <i class="fas fa-heart icons-main" ></i>
              <% end %>
            <% else %>
              <%= link_to  favorite_instrument_path(instrument, type: "favourite"),remote: true, method: :put  do %>
                <i class="far fa-heart icons-main"></i>
              <% end %>
            <% end %>
          <% end %>
          <i class="fas fa-map-marker-alt "></i>
          <p class="location"><%= instrument.city %></p>
        </div>
      </div>
      <div class="overview-small">
        <div class="price"> <%= instrument.price %> â‚¬ /h</div>
        <div><%= image_tag 'svg/rating-grey.svg', class: "rating" %> <%= pluralize(instrument.reviews.count, 'review') %></div>
        <p class="span-headline"><%= instrument.title %></p>
        <% if instrument.user != current_user %>
          <p><button type="submit" class="button-book">Book</button></p>
        <% end %>
      </div>
      <% if current_page?('/profile') %>
        <div class="edit-instrument">
          <button class="button-info">
            <%= link_to 'Edit Instrument', edit_instrument_path(instrument), class: "button-info" %>
          </button>
          <button class=button-primary >
            <% if instrument.pause %>
              <%= link_to 'Un-Pause Instrument', activate_instrument_path(instrument), method: :put, class: "button-primary" %>
            <% else %>
              <%= link_to 'Pause Instrument', pause_instrument_path(instrument), method: :put, class: "button-primary" %>
            <% end %>
          </button>
          <button type="submit">
            <%= link_to 'Delete Instrument', instrument_path(instrument), method: :delete, data: { confirm: 'This will delete your instrument. Are you sure?', disable_with: 'Deleting...' } %>
          </button>
          <div class="section-instrument-bookings">
            <%= link_to 'Manage your Instrument Bookings', instrument_instrument_bookings_path(instrument) %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>