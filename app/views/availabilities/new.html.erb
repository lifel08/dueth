<div class="container padding-form new-instrument">
  <div class="row d-flex justify-content-center">
    <div class="ncol-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Add a Instrument Availability</h1>
      <%= simple_form_for ([@instrument, @availability]), method: :post do |f| %>
      <%#= form_for :instrument_availabilities, url: instrument_availabilities_path(@instrument), method: :post do |f| %>
        <div class="form-group row">
          <label for="staticEmail" class="col-sm-2 col-form-label">Start Datetime</label>
          <div class="col-sm-10">
           <%= f.datetime_local_field :start_datetime, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputPassword" class="col-sm-2 col-form-label">End Datetime</label>
          <div class="col-sm-10">
           <%= f.datetime_local_field :end_datetime, class: 'form-control' %> 
          </div>
        </div>
        <div class="form-group row">
          <%= f.submit class: 'button-primary body_main' %>
        </div>
      <% end %>
    </div>
  </div>
</div> 
