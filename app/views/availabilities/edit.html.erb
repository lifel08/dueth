<div class="d-block">
  <div class="edit-main">
    <h2>Edit Availability</h2>
  </div>
  <%= form_with(model: [@instrument, @availability], validate: true) do |f| %>
    <div class="edit-main border-0">
      <p>Status:</p>
      <label class="switch">
        <%= f.check_box :available, class: "custom-control-input" %>
        <div class="slider round"></div>
        <div class="text"></div>
      </label>
    </div>
    <div class="form-group mb-3 edit-main">
      <label class="form-control-label" for="input-email">Month</label>
      <div class="form-control">
        <%= @availability.month%>
      </div>
    </div>
    <div class="form-group mb-3 edit-main">
      <label class="form-control-label" for="input-email">Day:</label>
      <div class="form-control">
        <%= @availability.day%>
      </div>
    </div>
    <div class="form-group mb-3 edit-main">
      <label class="form-control-label" for="start_time">Start Time:</label>
      <%= f.text_field :to, id: 'start_time', class: 'form-control flat_time_pick' %>
    </div>
    <div class="form-group mb-3 edit-main">
      <label class="form-control-label" for="end_time">End Time:</label>
      <%= f.text_field :from, id: 'end_time', class: 'form-control flat_time_pick' %>
    </div>
    <div class="text-left edit-main">
      <%= link_to 'Close', instrument_availabilities_path(@instrument, @availability), class: 'btn btn-primary mb-5' %>
      <%= f.submit 'Update', class: 'btn btn-dark mx-4 mb-5' %>
    </div>
  <% end %>
</div>