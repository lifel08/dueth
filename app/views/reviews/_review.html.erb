<div class="review-rating" data-score="<%= review.rating %>"></div>
<p><%= review.content %></p>
<% if user_signed_in? %>
  <% if review.user_id == current_user.id %>
    <%= link_to "Edit", edit_instrument_review_path(review.instrument, review)%>
    <%= link_to "Delete", instrument_review_path(review.instrument, review), method: :delete, data: { confirm: "Are you sure?" }%>
  <% end %>
<% end %>