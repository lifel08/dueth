<% content_for :head do %>
  <title>Log in | Dueth.com</title>
  <meta name="description" content="Log in to Dueth.com and find your next music instrument for your practise."/>
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href="https://www.dueth.com/users/sign_in"/>
  <meta property="og:title" content="Log In | Dueth.com"/>
  <meta property="og:description" content="Log In to your Dueth.com account.">
  <meta property="og:type" content="website" />
<% end %>
<div class="container-login">
  <h1>Log in</h1>
  <% @disable_nav = true %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <p><%= render 'icons/profile_icon', width: 70, height: 150%></p>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <p><%= f.button :submit, "Log in", class: 'button-primary' %></p>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>