<% content_for :head do %>
  <title>Add a new Instrument | Dueth.com</title>
  <meta name="robots" content="noindex, nofollow"/>
<% end %>

<div class="container padding-form new-instrument">
  <div class="row d-flex justify-content-center">
    <div class="ncol-xs-12 col-sm-10 col-sm-offset-1">

      <% if @instrument.errors.messages.present? %>
        <ul> Please fix the following errors:
          <% @instrument.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <h1>Add a new instrument</h1>
      <%= simple_form_for @instrument, multipart: true do |f| %>
        <%= f.input :title, label: "What Instrument do you want to offer for practise?", placeholder: "Digital Piano" %>
        <%= f.input :subtitle, label: "Title - In a few words: What's special about your instrument?" , placeholder: "Example: Very central Digital Piano", input_html: { maxlength: 70} %>
        <%= f.input :description, as: :text, placeholder: "Example: Anna is offering her good to practise and easy to reach digital piano. Come by and enjoy your piano practise as usual!"%>
        <%= f.input :location, label: "Add the city" %>
        <%= f.input :price, label: "Add a price" %>
        <%= f.input :photo, as: :file, label: "Add Photos (min 5)" %>
      <div class="row">
       <% Feature.find_each do |feature, icon| %>
        <li class ="feature-list col col-lg-6">
          <div class="features">
            <%= raw feature.icon %><%= check_box_tag :"instrument[feature_ids][]", feature.id, is_feature_checked?(feature.id) %>
            <%= feature.name %>
          </div>
        </li>
        <% end %>
        </div>
        <br/>
        <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>

  </div>
</div>
