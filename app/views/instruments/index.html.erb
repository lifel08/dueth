<div id='map'></div>

<script>
(function() {

  mapboxgl.accessToken = 'pk.eyJ1IjoibGlmZWwwOCIsImEiOiJja2xjZjZ4cjEwNmxmMm5uMW9zMGdkOHg1In0.JYXdBIgQmfiOqt3mItVk5g';

  var map = new mapboxgl.Map({
  container: 'map',
  style: 'mapbox://styles/mapbox/light-v10',
  center: [-96, 37.8],
  zoom: 3
  });

// code from the next step will go here!
var geojson = {
  type: 'FeatureCollection',
  features: [{
  type: 'Feature',
  geometry: {
  type: 'Point',
  coordinates: [-77.032, 38.913]
  },
  properties: {
  title: 'Mapbox',
  description: 'Washington, D.C.'
  }
  },
  {
  type: 'Feature',
