<% if @instrument.user == current_user %>
  <h4>Hi <%= current_user.first_name %>!</h4>
  <% if @instrument.bookings.count > 0%>
    <%= "There are #{@instrument.bookings.count} requests to approve"  %>
    <% @instrument.bookings.each do |booking| %>
      <%= booking.booking_timeframe %>
      <%= booking.user.first_name %>
      <%= link_to 'Accept Booking', booking_path, { method: :update, class:"button-alert"} %>
    <% end %>
  <% else %>
    <p>No pending requests</p>
  <% end %>
  <div class="book-now">
    <!-- booking steps -->
  <% else %>
    <h4>Your Bookings</h4>
    <br>
    <div class="own-bookings">
      <% @instrument.bookings.requested_by(current_user.id).each do |booking| %>
        <%= booking.booking_timeframe %>
        <% if booking.status == 1 %>
          <h4>Booking confirmed!</h4>
          <%= link_to 'Cancel booking', instrument_bookings_path(@instrument), { method: :delete } , class:"button-primary" %>
        <% elsif booking.status.zero? %>
          <h5 style="color:#3293a4;">Pending...</h5>
          <p>Owner <%= @instrument.user.first_name %> needs to confirm your booking! </p>
          <%= link_to 'Cancel booking', instrument_bookings_path(@instrument), { method: :delete, class:"button-alert" }  %>
        </div>
      <% end %>
    <% end %>
    <br>
    <h4>More Disponibilities</h4>
    <!-- booking steps end -->
    <% @instrument.disponibilities.each do |disponibility|%>
      <%= simple_form_for @instrument, url: (instrument_bookings_path(@instrument)), method: :post do |f| %>
        <%= f.input :disponibility_id, as: :hidden, :input_html => { value: disponibility.id }%>
        <%= f.button :submit, "Book", class: "button-primary" %>
      <% end %>
      <p>From: <%= disponibility.start_from  %></p>
      <p>To:<%= disponibility.until_to %> </p>
    <% end %>
  </div>
<% end %>